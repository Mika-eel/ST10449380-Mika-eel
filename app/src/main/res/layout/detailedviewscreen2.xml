<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#448AFF">

    <EditText
        android:id="@+id/dayEditText"
        android:layout_width="306dp"
        android:layout_height="63dp"
        android:layout_marginTop="81dp"
        android:layout_marginEnd="49dp"
        android:ems="10"
        android:inputType="text"
        android:text="Day:"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/minimumTemperatureEditText"
        android:layout_width="302dp"
        android:layout_height="63dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="63dp"
        android:ems="10"
        android:inputType="text"
        android:text="min. Temperature:"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dayEditText" />

    <EditText
        android:id="@+id/maximumTemperatureEditText"
        android:layout_width="316dp"
        android:layout_height="63dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="53dp"
        android:ems="10"
        android:inputType="text"
        android:text="max. Temperature:"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/minimumTemperatureEditText" />

    <EditText
        android:id="@+id/weatherConditionEditText"
        android:layout_width="332dp"
        android:layout_height="57dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="43dp"
        android:ems="10"
        android:inputType="text"
        android:text="Weather Condition:"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/maximumTemperatureEditText" />

    <Button
        android:id="@+id/button"
        android:layout_width="129dp"
        android:layout_height="73dp"
        android:layout_marginTop="129dp"
        android:layout_marginEnd="139dp"
        android:text="back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weatherConditionEditText" />
</androidx.constraintlayout.widget.ConstraintLayout>